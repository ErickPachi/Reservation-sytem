@using Microsoft.AspNetCore.Identity
@using BeanSceneDipAssT2.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav" style="position:absolute; right:5%;">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @UserManager.GetUserName(User)!</a>
    </li>
    //need to be excludove for the staff or managers
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-d">Logout</button>
        </form>
    </li>
}
else
{
<li class="nav-item">
    <a class="nav-link nav_link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
</li>
}
</ul>
