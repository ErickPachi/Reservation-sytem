@using Microsoft.AspNetCore.Identity
@using BeanSceneDipAssT2.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link nav_link" asp-area="Identity" asp-page="/Account/Manage/Index">My Account</a>
    if (User.IsInRole("Staff"))
    {
        <a class="nav-link nav_link" asp-area="" asp-controller="Booking" asp-action="Index" style="color:gold">Reserfations</a>
    }
    if (User.IsInRole("Manager"))
    {
        <a class="nav-link nav_link" asp-area="" asp-action="MReservations" asp-controller="Manager" style="color:gold">Reservations</a>
        <a class="nav-link nav_link" asp-area="" asp-controller="Manager" asp-action="Index" style="color:gold">Manager page</a>
    }
}
else
{
    <a class="nav-link nav_link" asp-area="Identity" asp-page="/Account/Register">Register</a>
}