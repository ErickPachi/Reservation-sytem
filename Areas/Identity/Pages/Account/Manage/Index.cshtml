@page

@model IndexModel

@using Microsoft.AspNetCore.Identity
@using BeanSceneDipAssT2.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-12">
        <form id="profile-form" method="post">
            <div class="form-group">
                <div class="col- col-md-6" style="float: left;">
                    <label>User ID:</label>
                    <input class="form-control" value="@SignInManager.UserManager.GetUserId(User)" readonly />
                </div>
                <div class="col- col-md-6" style="float: left;">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" readonly />
                </div>
                <div class="col- col-md-6" style="float: left;">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                </div>
                <div class="col- col-md-6" style="float: left;">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                </div>
                <div class="col- col-md-6" style="float: left;">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                </div>
            </div>
            <br />
            <div class="col-" style="float: left; margin-top: 30px; margin-left: 15px;">
                <button id="update-profile-button" type="submit" class="btn">Save</button>
            </div>
        </form>
    </div>
</div>
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}